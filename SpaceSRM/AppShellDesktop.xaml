<Shell
    x:Class="SpaceSRM.AppShellDesktop"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SpaceSRM"
    FlyoutBehavior="Locked"
    
   
    Shell.NavBarIsVisible="False"
    FlyoutWidth="200"
    

    
    >

    <Shell.FlyoutHeader>
        
        <Image Source="logo.png"></Image>
        
    </Shell.FlyoutHeader>
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HorizontalOptions="Center" WidthRequest="200" ColumnSpacing="10">
                <Grid.RowDefinitions >
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="{Binding Icon}" Grid.Column="0" HeightRequest="18" WidthRequest="18" />
                <Label FontSize="17" VerticalOptions="Center" Grid.Column="1" Text="{Binding Title}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Icon="record.png" Title="Записи" >
        <ShellContent  ContentTemplate="{DataTemplate local:Views.Records}"/>
    </FlyoutItem>
    <FlyoutItem Icon="statistic.png" Title="Статистика" >
        <ShellContent ContentTemplate="{DataTemplate local:Views.Statistic}" />
    </FlyoutItem>
    <FlyoutItem Icon="report.png" Title="Звіт" >
        <ShellContent  ContentTemplate="{DataTemplate local:Views.Calendar}" />
    </FlyoutItem>
    <FlyoutItem Icon="costs.png" Title="Витрати" >
        <ShellContent ContentTemplate="{DataTemplate local:Views.Costs}" />
    </FlyoutItem>
    <FlyoutItem Icon="setting.png" Title="Налаштування" >
        <ShellContent ContentTemplate="{DataTemplate local:Views.Settings}" />
    </FlyoutItem>

    



</Shell>

    
